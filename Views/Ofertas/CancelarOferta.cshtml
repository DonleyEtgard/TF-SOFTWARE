@model ZONAUTO.Models.Oferta


@{
    ViewData["Title"] = "Cancelar Oferta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cancelar Oferta</h2>

@if (Model == null)
{
    <div class="alert alert-danger">No se encontró la oferta.</div>
}
else
{
    <h4 class="text-danger">¿Confirmás la cancelación de esta oferta?</h4>
    <hr />

    <div class="card p-3">
        <p><strong>Publicación:</strong> @Model.Publicacion?.Titulo (@Model.PublicacionId)</p>
        <p><strong>Monto:</strong> @($"{Model.Monto:C}")</p>
        <p><strong>Fecha:</strong> @($"{Model.FechaOferta:dd/MM/yyyy}")</p>
    </div>

    <form asp-action="CancelarOferta" method="post" class="mt-3">
        <input type="hidden" name="ofertaId" value="@Model.OfertaId" />
        <input type="hidden" name="compradorId" value="@Model.CompradorId" />

        <button type="submit" class="btn btn-danger">Cancelar Oferta</button>
        <a asp-controller="Publicaciones" asp-action="Details" asp-route-id="@Model.PublicacionId" class="btn btn-secondary">Volver</a>
    </form>
}

