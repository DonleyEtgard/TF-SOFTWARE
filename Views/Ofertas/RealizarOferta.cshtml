@model ZONAUTO.Models.Oferta

@{
    ViewData["Title"] = "Realizar Oferta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Realizar Oferta</h2>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success">@TempData["Mensaje"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<form asp-action="RealizarOferta" method="post">
    <div class="form-group">
        <label for="PublicacionId">Publicación</label>
        <select asp-for="PublicacionId" class="form-control" asp-items="ViewBag.PublicacionId"></select>
        <span asp-validation-for="PublicacionId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="CompradorId">Comprador</label>
        <select asp-for="CompradorId" class="form-control" asp-items="ViewBag.CompradorId"></select>
        <span asp-validation-for="CompradorId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Monto">Monto de la Oferta</label>
        <input asp-for="Monto" class="form-control" />
        <span asp-validation-for="Monto" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Ofertar</button>
    <a asp-controller="Publicaciones" asp-action="Index" class="btn btn-secondary mt-3">Volver</a>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
