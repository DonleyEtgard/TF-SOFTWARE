@model IEnumerable<ZONAUTO.Models.Publicacione>

@{
    ViewData["Title"] = "Mis Publicaciones";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<p>
    <a asp-action="CrearPublicacion" class="btn btn-primary">➕ Crear Nueva Publicación</a>
</p>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success">
        @TempData["Mensaje"]
    </div>
}

<table class="table table-striped table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th>Título</th>
            <th>Descripción</th>
            <th>Precio</th>
            <th>Auto</th>
            <th>Propiedad</th>
            <th>Categoría</th>
            <th>Imagen</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Titulo</td>
                <td>@item.Descripcion</td>
                <td>@item.Precio.ToString("C")</td>
                <td>
                    @if (item.Auto != null)
                    {
                        @($"{item.Auto.Marca} {item.Auto.Modelo} ({item.Auto.Anio}) - {item.Auto.Kilometro} km")
                    }
                    else
                    {
                        <span class="text-muted">N/A</span>
                    }
                </td>
                <td>
                    @if (item.Propiedad != null)
                    {
                        @($"{item.Propiedad.Ubicacion} - {item.Propiedad.MetroCuadrados} m² - {item.Propiedad.Habitaciones} habs.")
                    }
                    else
                    {
                        <span class="text-muted">N/A</span>
                    }
                </td>
                <td>@item.Categoria?.Nombre</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImagenRuta))
                    {
                        <img src="@item.ImagenRuta" alt="Imagen" style="max-width:100px; max-height:80px;" class="img-thumbnail" />
                    }
                    else
                    {
                        <span class="text-muted">Sin imagen</span>
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.PublicacionId" class="btn btn-sm btn-info me-1 mb-1">ℹ️ Detalles</a>
                    <a asp-action="Edit" asp-route-id="@item.PublicacionId" class="btn btn-sm btn-warning me-1 mb-1">✏️ Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.PublicacionId" class="btn btn-sm btn-danger mb-1">🗑️ Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info mt-3">
        No tienes publicaciones todavía. ¡Crea la primera!
    </div>
}