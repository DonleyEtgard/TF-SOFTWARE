@model ZONAUTO.Models.Publicacione

@{
    ViewData["Title"] = "Editar Publicación";
}

<h1>@ViewData["Title"]</h1>

<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" enctype="multipart/form-data">
            <input type="hidden" asp-for="PublicacionId" />

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Titulo" class="form-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Descripcion" class="form-label"></label>
                <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Precio" class="form-label"></label>
                <input asp-for="Precio" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="AutoId" class="form-label">Auto</label>
                <select asp-for="AutoId" class="form-select" asp-items="@(new SelectList(ViewBag.Autos, "AutoId", "Nombre"))"></select>
                <span asp-validation-for="AutoId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PropiedadId" class="form-label">Propiedad</label>
                <select asp-for="PropiedadId" class="form-select" asp-items="@(new SelectList(ViewBag.Propiedades, "PropiedadId", "Nombre"))"></select>
                <span asp-validation-for="PropiedadId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CategoriaId" class="form-label">Categoría</label>
                <select asp-for="CategoriaId" class="form-select" asp-items="@(new SelectList(ViewBag.Categorias, "CategoriaId", "Nombre"))"></select>
                <span asp-validation-for="CategoriaId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Imagen Actual</label>
                @if (!string.IsNullOrEmpty(Model.ImagenRuta))
                {
                    <div>
                        <img src="@Model.ImagenRuta" alt="Imagen" style="max-width:200px; max-height:150px;" class="img-thumbnail mb-2" />
                    </div>
                }
                <input type="file" asp-for="ImagenRuta" class="form-control" />
                <span class="text-muted">Sube una nueva imagen para reemplazar la actual.</span>
            </div>

            <div class="mb-3">
                <input type="submit" value="Guardar Cambios" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-secondary ms-2">Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
