@model List<ZONAUTO.Models.Usuario>
@{
    ViewData["Title"] = "Gestión de Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";

    // Parámetros de paginación
    int currentPage = ViewBag.PaginaActual ?? 1;
    int totalPages = ViewBag.TotalPaginas ?? 1;
    string filtroRol = ViewBag.FiltroRol;
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Gestión de Usuarios</h1>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Listado de Usuarios</h5>
                <form method="get" class="d-flex" style="width: 300px;">
                    <input type="text" name="filtroRol" class="form-control me-2"
                           placeholder="Filtrar por rol" value="@filtroRol">
                    <button type="submit" class="btn btn-light">
                        <i class="fas fa-search"></i>
                    </button>
                </form>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Nombre</th>
                            <th>Email</th>
                            <th>Rol</th>
                            <th>Estado</th>
                            <th>Registro</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            foreach (var usuario in Model)
                            {
                                <tr>
                                    <td>@usuario.UsuarioId</td>
                                    <td>@usuario.Persona?.Nombre @usuario.Persona?.Apellido</td>
                                    <td>@usuario.Persona?.Email</td>
                                    <td>@usuario.TipoUsuario?.Nombre</td>
                                    <td>
                                        <span class="badge @(usuario.Habilitado ? "bg-success" : "bg-danger")">
                                            @(usuario.Habilitado ? "Activo" : "Inactivo")
                                        </span>
                                    </td>
                                    <td>@usuario.FechaRegistro.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <div class="d-flex gap-2">
                                            <form asp-action="ToggleEstado" asp-route-id="@usuario.UsuarioId" method="post">
                                                <button type="submit" class="btn btn-sm @(usuario.Habilitado ? "btn-warning" : "btn-success")">
                                                    @(usuario.Habilitado ? "Desactivar" : "Activar")
                                                </button>
                                            </form>
                                            <a asp-action="Details" asp-route-id="@usuario.UsuarioId"
                                               class="btn btn-sm btn-info">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center py-4 text-muted">
                                    No se encontraron usuarios
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Paginación -->
            @if (totalPages > 1)
            {
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
                        <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                            <a class="page-link"
                               asp-action="GestionUsuarios"
                               asp-route-page="@(currentPage - 1)"
                               asp-route-filtroRol="@filtroRol">
                                Anterior
                            </a>
                        </li>

                        @for (int i = 1; i <= totalPages; i++)
                        {
                            <li class="page-item @(i == currentPage ? "active" : "")">
                                <a class="page-link"
                                   asp-action="GestionUsuarios"
                                   asp-route-page="@i"
                                   asp-route-filtroRol="@filtroRol">@i</a>
                            </li>
                        }

                        <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                            <a class="page-link"
                               asp-action="GestionUsuarios"
                               asp-route-page="@(currentPage + 1)"
                               asp-route-filtroRol="@filtroRol">
                                Siguiente
                            </a>
                        </li>
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-cierre de alertas después de 5 segundos
        window.setTimeout(function() {
            $(".alert").fadeTo(500, 0).slideUp(500, function(){
                $(this).remove();
            });
        }, 5000);
    </script>
}