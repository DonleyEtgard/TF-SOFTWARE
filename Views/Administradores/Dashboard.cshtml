@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Usa tu layout
}

<h1 class="mb-4">Panel de Control - Dashboard</h1>

<!-- KPIs -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-white bg-primary mb-3 shadow">
            <div class="card-body">
                <h5 class="card-title">Usuarios</h5>
                <p class="card-text display-5">@ViewBag.TotalUsuarios</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-success mb-3 shadow">
            <div class="card-body">
                <h5 class="card-title">Administradores</h5>
                <p class="card-text display-5">@ViewBag.TotalAdministradores</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-warning mb-3 shadow">
            <div class="card-body">
                <h5 class="card-title">Publicaciones</h5>
                <p class="card-text display-5">@ViewBag.TotalPublicaciones</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-danger mb-3 shadow">
            <div class="card-body">
                <h5 class="card-title">Ofertas</h5>
                <p class="card-text display-5">@ViewBag.TotalOfertas</p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Últimos usuarios -->
    <div class="col-md-6 mb-4">
        <h4>Últimos Usuarios</h4>
        <table class="table table-striped table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in (List<ZONAUTO.Models.Usuario>)ViewBag.UltimosUsuarios)
                {
                    <tr>
                        <td>@user.UsuarioId</td>
                        <td>@(user.Persona != null ? $"{user.Persona.Nombre} {user.Persona.Apellido}" : "Sin Nombre")</td>
                        <td>@(user.Persona?.Email ?? "Sin Email")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Últimas ofertas -->
    <div class="col-md-6 mb-4">
        <h4>Últimas Ofertas</h4>
        <table class="table table-striped table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID Oferta</th>
                    <th>ID Publicación</th>
                    <th>Precio Oferta</th>
                    <th>Fecha Oferta</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var oferta in (List<ZONAUTO.Models.Oferta>)ViewBag.UltimasOfertas)
                {
                    <tr>
                        <td>@oferta.OfertaId</td>
                        <td>@oferta.PublicacionId</td>
                        <td>@($"{(oferta.Monto != 0 ? oferta.Monto : oferta.Monto):C}")</td>
                        <td>@oferta.FechaOferta?.ToString("dd/MM/yyyy")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Gráfico de publicaciones por mes -->
<div class="row">
    <div class="col-12">
        <h4>Publicaciones por Mes</h4>
        <canvas id="publicacionesChart" height="100"></canvas>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const ctx = document.getElementById('publicacionesChart').getContext('2d');
        const publicacionesChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(
                    ((int[])ViewBag.PublicacionesMes)
                        .Select(m => System.Globalization.CultureInfo
                            .GetCultureInfo("es-ES")
                            .DateTimeFormat
                            .GetAbbreviatedMonthName(m))
                        .ToArray()
                )),
                datasets: [{
                    label: 'Cantidad de Publicaciones',
                    data: @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.CantidadPublicacionesMes)),
                    backgroundColor: 'rgba(54, 162, 235, 0.7)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: { beginAtZero: true }
                },
                plugins: {
                    legend: { display: false }
                }
            }
        });
    </script>
}