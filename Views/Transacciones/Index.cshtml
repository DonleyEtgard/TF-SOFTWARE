@model IEnumerable<ZONAUTO.Models.Transaccione>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MontoFinal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MetodoDePago)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Confirmado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comprador)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Publicacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vendedor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MontoFinal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MetodoDePago)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Confirmado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comprador.CompradorId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Publicacion.PublicacionId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vendedor.VendedorId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TransaccionId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TransaccionId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TransaccionId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
