@model ZONAUTO.Models.UserLogin
@{
    ViewData["Title"] = "Crear Login";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group mb-3">
        <label asp-for="UsuarioId" class="control-label"></label>
        <select asp-for="UsuarioId" class="form-control" asp-items="ViewBag.UsuarioId"></select>
        <span asp-validation-for="UsuarioId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="FechaLogin" class="control-label"></label>
        <input asp-for="FechaLogin" class="form-control" />
        <span asp-validation-for="FechaLogin" class="text-danger"></span>
    </div>

    <div class="form-group form-check mb-3">
        <input class="form-check-input" type="checkbox" asp-for="FueExitoso" />
        <label class="form-check-label" asp-for="FueExitoso"></label>
    </div>

    <div class="form-group mb-3">
        <label asp-for="DireccionIp" class="control-label"></label>
        <input asp-for="DireccionIp" class="form-control" />
        <span asp-validation-for="DireccionIp" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Crear</button>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</form>