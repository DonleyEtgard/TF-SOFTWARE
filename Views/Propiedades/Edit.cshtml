@model ZONAUTO.Models.PublicacionCreateViewModel

@{
    ViewData["Title"] = "Editar Publicación de Propiedad";
}

<h1>Editar Publicación</h1>

<form asp-action="Edit" enctype="multipart/form-data" method="post">
    <input type="hidden" asp-for="Publicacione.PublicacionId" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <h4>Datos de la Propiedad</h4>
    <table class="table table-bordered">
        <tr>
            <th>Ubicación</th>
            <td>
                <input asp-for="Publicacione.Propiedad.Ubicacion" class="form-control" />
                <span asp-validation-for="Publicacione.Propiedad.Ubicacion" class="text-danger"></span>
            </td>
        </tr>
        <tr>
            <th>Metros Cuadrados</th>
            <td>
                <input asp-for="Publicacione.Propiedad.MetroCuadrados" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="Publicacione.Propiedad.MetroCuadrados" class="text-danger"></span>
            </td>
        </tr>
        <tr>
            <th>Habitaciones</th>
            <td>
                <input asp-for="Publicacione.Propiedad.Habitaciones" type="number" class="form-control" />
                <span asp-validation-for="Publicacione.Propiedad.Habitaciones" class="text-danger"></span>
            </td>
        </tr>
        <tr>
            <th>Tipo</th>
            <td>
                <input asp-for="Publicacione.Propiedad.Tipo" class="form-control" />
                <span asp-validation-for="Publicacione.Propiedad.Tipo" class="text-danger"></span>
            </td>
        </tr>
        <tr>
            <th>Descripción Propiedad</th>
            <td>
                <textarea asp-for="Publicacione.Propiedad.Descripcion" class="form-control"></textarea>
                <span asp-validation-for="Publicacione.Propiedad.Descripcion" class="text-danger"></span>
            </td>
        </tr>
    </table>

    <h4>Datos de la Publicación</h4>
    <table class="table table-bordered">
        <tr>
            <th>Título</th>
            <td>
                <input asp-for="Publicacione.Titulo" class="form-control" />
                <span asp-validation-for="Publicacione.Titulo" class="text-danger"></span>
            </td>
        </tr>
        <tr>
            <th>Descripción Publicación</th>
            <td>
                <textarea asp-for="Publicacione.Descripcion" class="form-control"></textarea>
                <span asp-validation-for="Publicacione.Descripcion" class="text-danger"></span>
            </td>
        </tr>
        <tr>
            <th>Precio</th>
            <td>
                <input asp-for="Publicacione.Precio" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="Publicacione.Precio" class="text-danger"></span>
            </td>
        </tr>
        <tr>
            <th>Imagen Actual</th>
            <td>
                @if (!string.IsNullOrEmpty(Model.Publicacione.ImagenRuta))
                {
                    <img src="@Model.Publicacione.ImagenRuta" alt="Imagen Propiedad" style="max-width:150px; border-radius:5px;" />
                }
            </td>
        </tr>
        <tr>
            <th>Subir Nueva Imagen</th>
            <td>
                <input type="file" name="Imagen" class="form-control" />
            </td>
        </tr>
    </table>

    <button type="submit" class="btn btn-primary mt-3">Guardar Cambios</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
