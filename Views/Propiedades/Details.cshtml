@model ZONAUTO.Models.Publicacione

@{
    ViewData["Title"] = "Detalles de Publicación";
}

<div class="container mt-4">
    <h1 class="text-center mb-4 text-primary">@Model.Titulo</h1>

    <div class="card shadow border-0">
        <div class="card-header bg-primary text-white text-center">
            <h4 class="mb-0">Detalles de la Propiedad</h4>
        </div>

        <div class="card-body">
            <table class="table table-bordered table-hover align-middle">
                <tbody>
                    <tr>
                        <th style="width:200px;">Ubicación</th>
                        <td>@Model.Propiedad?.Ubicacion</td>
                    </tr>
                    <tr>
                        <th>Metros Cuadrados</th>
                        <td>@Model.Propiedad?.MetroCuadrados m²</td>
                    </tr>
                    <tr>
                        <th>Habitaciones</th>
                        <td>@Model.Propiedad?.Habitaciones</td>
                    </tr>
                    <tr>
                        <th>Tipo</th>
                        <td>@Model.Propiedad?.Tipo</td>
                    </tr>
                    <tr>
                        <th>Descripción</th>
                        <td>@Model.Propiedad?.Descripcion</td>
                    </tr>
                    <tr>
                        <th>Categoría</th>
                        <td>@Model.Categoria?.Tipo</td>
                    </tr>
                    <tr>
                        <th>Precio</th>
                        <td>@Model.Precio.ToString("C")</td>
                    </tr>
                    <tr>
                        <th>Fecha de Publicación</th>
                        <td>@Model.FechaPublicacion.ToShortDateString()</td>
                    </tr>
                    <tr>
                        <th>Descripción de la Publicación</th>
                        <td>@Model.Descripcion</td>
                    </tr>
                </tbody>
            </table>

            @if (!string.IsNullOrEmpty(Model.ImagenRuta))
            {
                <div class="text-center mt-3">
                    <img src="@Model.ImagenRuta" alt="Imagen de la propiedad"
                         class="img-fluid rounded shadow-sm" style="max-width: 350px;" />
                </div>
            }
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Edit" asp-route-id="@Model.PublicacionId" class="btn btn-warning px-4 me-2">
            <i class="bi bi-pencil-square"></i> Editar
        </a>
        <a asp-action="Index" class="btn btn-secondary px-4">
            <i class="bi bi-arrow-left-circle"></i> Volver
        </a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

