@model ZONAUTO.Models.Publicacione

@{
    ViewData["Title"] = "Crear Publicación de Auto";
}

<h1>Crear Nueva Publicación</h1>

<form asp-action="Create" enctype="multipart/form-data" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <h4>Datos del Auto</h4> 
    <div class="row mb-3">
    <table class="table table-bordered">
        <tr>
            <th>Marca</th>
            <td><input name="Marca" class="form-control" /></td>
        </tr>
        <tr>
            <th>Modelo</th>
            <td><input name="Modelo" class="form-control" /></td>
        </tr>
        <tr>
            <th>Año</th>
            <td><input name="Anio" type="number" class="form-control" /></td>
        </tr>
        <tr>
            <th>Kilometraje</th>
            <td><input name="Kilometro" type="number" class="form-control" /></td>
        </tr>
        <tr>
            <th>Descripción del Auto</th>
            <td><textarea name="Descripcion" class="form-control"></textarea></td>
        </tr>
        <tr>
            <th>Categoría</th>
            <td>
                <select name="CategoriaId" class="form-control">
                    @foreach (var categoria in ViewBag.Categorias)
                    {
                        <option value="@categoria.CategoriaId">@categoria.Tipo</option>
                    }
                </select>
            </td>
        </tr>
    </table>

    <h4>Datos de la Publicación</h4>
    <table class="table table-bordered">
        <tr>
            <th>Precio</th>
            <td><input name="Precio" type="number" step="0.01" class="form-control" /></td>
        </tr>
        <tr>
            <th>Imagen</th>
            <td><input type="file" name="Imagen" class="form-control" /></td>
        </tr>
    </table>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Crear</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancelar</a>
</form>

 