@model ZONAUTO.Models.PublicacionCreateViewModel

@{
    ViewData["Title"] = "Editar Publicación de Auto";
}

<h1 class="mb-4 text-primary">Editar Publicación</h1>

<form asp-action="Edit" enctype="multipart/form-data" method="post">
    <input type="hidden" asp-for="Publicacione.PublicacionId" />
    <input type="hidden" asp-for="Publicacione.Auto.AutoId" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <h4>Datos del Auto</h4>
    <table class="table table-bordered">
        <tr>
            <th>Marca</th>
            <td>
                <input asp-for="Publicacione.Auto.Marca" class="form-control" />
                <span asp-validation-for="Publicacione.Auto.Marca" class="text-danger"></span>
            </td>
        </tr>
        <tr>
            <th>Modelo</th>
            <td>
                <input asp-for="Publicacione.Auto.Modelo" class="form-control" />
                <span asp-validation-for="Publicacione.Auto.Modelo" class="text-danger"></span>
            </td>
        </tr>
        <tr>
            <th>Año</th>
            <td>
                <input asp-for="Publicacione.Auto.Anio" class="form-control" />
                <span asp-validation-for="Publicacione.Auto.Anio" class="text-danger"></span>
            </td>
        </tr>
        <tr>
            <th>Kilometraje</th>
            <td>
                <input asp-for="Publicacione.Auto.Kilometro" class="form-control" />
                <span asp-validation-for="Publicacione.Auto.Kilometro" class="text-danger"></span>
            </td>
        </tr>
        <tr>
            <th>Descripción Auto</th>
            <td>
                <textarea asp-for="Publicacione.Auto.Descripcion" class="form-control"></textarea>
                <span asp-validation-for="Publicacione.Auto.Descripcion" class="text-danger"></span>
            </td>
        </tr>
    </table>

    <h4>Datos de la Publicación</h4>
    <table class="table table-bordered">
        <tr>
            <th>Título</th>
            <td>
                <input asp-for="Publicacione.Titulo" class="form-control" />
                <span asp-validation-for="Publicacione.Titulo" class="text-danger"></span>
            </td>
        </tr>
        <tr>
            <th>Descripción Publicación</th>
            <td>
                <textarea asp-for="Publicacione.Descripcion" class="form-control"></textarea>
                <span asp-validation-for="Publicacione.Descripcion" class="text-danger"></span>
            </td>
        </tr>
        <tr>
            <th>Precio</th>
            <td>
                <input asp-for="Publicacione.Precio" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="Publicacione.Precio" class="text-danger"></span>
            </td>
        </tr>
        <tr>
            <th>Imagen Actual</th>
            <td>
                @if (!string.IsNullOrEmpty(Model.Publicacione.ImagenRuta))
                {
                    <img src="@Model.Publicacione.ImagenRuta" alt="Imagen Auto"
                         style="max-width:200px; border-radius:8px; border:1px solid #ccc; padding:4px;" />
                }
                else
                {
                    <span class="text-muted">Sin imagen disponible</span>
                }
            </td>
        </tr>
        <tr>
            <th>Subir Nueva Imagen</th>
            <td>
                <input type="file" name="Imagen" class="form-control" />
            </td>
        </tr>
    </table>

    <button type="submit" class="btn btn-primary mt-3">
        <i class="bi bi-save"></i> Guardar Cambios
    </button>
    <a asp-action="Index" class="btn btn-secondary mt-3 ms-2">
        <i class="bi bi-arrow-left-circle"></i> Cancelar
    </a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
