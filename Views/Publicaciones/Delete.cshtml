@model ZONAUTO.Models.Publicacione

@{
    ViewData["Title"] = "Eliminar Publicación";
}

<h1>Eliminar Publicación</h1>

<h3>¿Estás seguro que querés borrar esta publicación?</h3>
<div class="card p-3 shadow mb-3">
    <dl class="row">
        <dt class="col-sm-2">Título</dt>
        <dd class="col-sm-10">@Model.Titulo</dd>

        <dt class="col-sm-2">Descripción</dt>
        <dd class="col-sm-10">@Model.Descripcion</dd>

        <dt class="col-sm-2">Precio</dt>
        <dd class="col-sm-10">@Model.Precio.ToString("C")</dd>

        <dt class="col-sm-2">Fecha Publicación</dt>
        <dd class="col-sm-10">@Model.FechaPublicacion.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-2">Auto</dt>
        <dd class="col-sm-10">@Model.Auto?.Modelo ?? "Sin auto"</dd>

        <dt class="col-sm-2">Propiedad</dt>
        <dd class="col-sm-10">@Model.Propiedad?.Ubicacion ?? "Sin propiedad"</dd>

        <dt class="col-sm-2">Categoría</dt>
        <dd class="col-sm-10">@Model.Categoria?.Nombre ?? "Sin categoría"</dd>

        <dt class="col-sm-2">Vendedor</dt>
        <dd class="col-sm-10">@Model.Usuario?.Persona?.Nombre @Model.Usuario?.Persona?.Apellido</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="PublicacionId" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</form>
