@model ZONAUTO.Models.Publicacione

@{
    ViewData["Title"] = "Crear Publicación";
}

<h2>Crear Publicación</h2>

<form asp-action="CrearPublicacion" enctype="multipart/form-data" method="post">
    <!-- Datos Generales -->
    <div class="form-group">
        <label asp-for="Titulo" class="control-label">Título</label>
        <input asp-for="Titulo" class="form-control" />
        <span asp-validation-for="Titulo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Precio" class="control-label">Precio</label>
        <input asp-for="Precio" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Descripcion" class="control-label">Descripción</label>
        <textarea asp-for="Descripcion" class="form-control"></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FechaPublicacion" class="control-label">Fecha de Publicación</label>
        <input asp-for="FechaPublicacion" class="form-control" type="date" />
        <span asp-validation-for="FechaPublicacion" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="control-label">Imagen Principal</label>
        <input type="file" name="ImagenPrincipal" class="form-control" accept="image/*" />
    </div>

    <div class="form-group">
        <label class="control-label">Categoría</label>
        <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.Categorias"></select>
        <span asp-validation-for="CategoriaId" class="text-danger"></span>
    </div>

    <!-- Selección tipo publicación -->
    <div class="form-group">
        <label class="control-label">Tipo de Publicación</label>
        <select id="tipoSeleccion" class="form-control">
            <option value="">-- Seleccione --</option>
            <option value="auto">Auto</option>
            <option value="propiedad">Propiedad</option>
        </select>
    </div>

    <!-- Datos Auto -->
    <div id="seccionAuto" style="display:none;">
        <h4>Datos del Auto</h4>
        <div class="form-group">
            <label class="control-label">Seleccionar Auto</label>
            <select name="autoSeleccionado" class="form-control" asp-items="ViewBag.Autos">
                <option value="">-- Ninguno --</option>
            </select>
        </div>

        <div class="form-group">
            <label>Marca</label>
            <input class="form-control" placeholder="Marca del Auto" disabled />
        </div>
        <div class="form-group">
            <label>Modelo</label>
            <input class="form-control" placeholder="Modelo del Auto" disabled />
        </div>
        <div class="form-group">
            <label>Año</label>
            <input class="form-control" placeholder="Año" disabled />
        </div>
        <div class="form-group">
            <label>Kilómetros</label>
            <input class="form-control" placeholder="Kilometraje" disabled />
        </div>
    </div>

    <!-- Datos Propiedad -->
    <div id="seccionPropiedad" style="display:none;">
        <h4>Datos de la Propiedad</h4>
        <div class="form-group">
            <label class="control-label">Seleccionar Propiedad</label>
            <select name="propiedadSeleccionada" class="form-control" asp-items="ViewBag.Propiedades">
                <option value="">-- Ninguna --</option>
            </select>
        </div>

        <div class="form-group">
            <label>Ubicación</label>
            <input class="form-control" placeholder="Ubicación" disabled />
        </div>
        <div class="form-group">
            <label>Metros Cuadrados</label>
            <input class="form-control" placeholder="Metros Cuadrados" disabled />
        </div>
        <div class="form-group">
            <label>Habitaciones</label>
            <input class="form-control" placeholder="Habitaciones" disabled />
        </div>
        <div class="form-group">
            <label>Tipo</label>
            <input class="form-control" placeholder="Casa / Departamento / etc." disabled />
        </div>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Publicar</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancelar</a>
</form>

@section Scripts {
    <script>
        document.getElementById("tipoSeleccion").addEventListener("change", function () {
            var tipo = this.value;
            document.getElementById("seccionAuto").style.display = (tipo === "auto") ? "block" : "none";
            document.getElementById("seccionPropiedad").style.display = (tipo === "propiedad") ? "block" : "none";
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}