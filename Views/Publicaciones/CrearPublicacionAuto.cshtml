@model ZONAUTO.Models.PublicacionCreateViewModel

@{
    ViewData["Title"] = "Crear Publicación de Auto";
}

<h2 class="text-center mb-4">🚗 Crear Publicación de Auto</h2>

<form asp-action="CrearPublicacionAuto" enctype="multipart/form-data" method="post" class="shadow p-4 rounded bg-light">
    <div class="form-group mb-3">
        <label class="form-label">Marca</label>
        <input asp-for="Publicacione.Auto.Marca" class="form-control" placeholder="Ej: Toyota" />
        <span asp-validation-for="Publicacione.Auto.Marca" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label class="form-label">Modelo</label>
        <input asp-for="Publicacione.Auto.Modelo" class="form-control" placeholder="Ej: Corolla" />
        <span asp-validation-for="Publicacione.Auto.Modelo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Año</label>
        <input asp-for="Publicacione.Auto.Anio" type="number" class="form-control" />
        <span asp-validation-for="Publicacione.Auto.Anio" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Kilometraje</label>
        <input asp-for="Publicacione.Auto.Kilometro" type="number" class="form-control" />
        <span asp-validation-for="Publicacione.Auto.Kilometro" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label class="form-label">Precio</label>
        <input asp-for="Publicacione.Precio" class="form-control" type="number" min="0" />
        <span asp-validation-for="Publicacione.Precio" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label class="form-label">Título</label>
        <input asp-for="Publicacione.Titulo" class="form-control" placeholder="Ej: Toyota Corolla en excelente estado" />
        <span asp-validation-for="Publicacione.Titulo" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label class="form-label">Descripción</label>
        <textarea asp-for="Publicacione.Descripcion" class="form-control" rows="3" placeholder="Describe el auto..."></textarea>
        <span asp-validation-for="Publicacione.Descripcion" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label class="form-label">Categoría</label>
        <select asp-for="Publicacione.CategoriaId"
                asp-items="@(new SelectList(Model.Categorias, "CategoriaId", "Tipo"))"
                class="form-select">
            <option value="">Seleccione una categoría</option>
        </select>
        <span asp-validation-for="Publicacione.CategoriaId" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <label class="form-label">Imagen del Auto</label>
        <input type="file" name="Imagen" class="form-control" accept="image/*" />
    </div>

    <button type="submit" class="btn btn-primary w-100">📤 Publicar Auto</button>
</form>

<div class="mt-3 text-center">
    <a asp-action="Index" class="btn btn-secondary">⬅ Volver al listado</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
